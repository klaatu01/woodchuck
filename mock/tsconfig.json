{
    "compilerOptions": {
        "outDir": "build",
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "baseUrl": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "sourceMap": false,
        "strict": false,
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
